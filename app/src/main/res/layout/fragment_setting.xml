                    android:text="@string/txt_item_setting8"
                    android:textColor="@color/color_wellcome_step1"
                    android:textSize="@dimen/sp15" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchSyncToFitSetting"
