            android:paddingHorizontal="@dimen/dimen12"
            android:paddingVertical="@dimen/dimen8"
            android:text="116.000Ä‘"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

    </RelativeLayout>

