<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_setting"
        android:paddingBottom="@dimen/dimen18"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvLabbelSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen30"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/txt_title_setting"
            android:textAllCaps="true"
            android:textColor="@color/color_text_step"
            android:textSize="@dimen/sp18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvatarSetting"
            android:layout_width="@dimen/dimen60"
            android:layout_height="@dimen/dimen60"
            android:layout_marginStart="@dimen/dimen18"
            android:layout_marginTop="@dimen/dimen16"
            android:background="@color/color_bg_setting"
            android:src="@drawable/img_avatar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLabbelSetting"
            app:shapeAppearanceOverlay="@style/circle" />

        <TextView
            android:id="@+id/tvNameSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen12"
            android:layout_marginTop="@dimen/dimen6"
            android:drawableEnd="@drawable/ic_setting1"
            android:drawablePadding="@dimen/dimen10"
            android:fontFamily="@font/roboto_regular"
            android:gravity="start"
            android:text="Nguyen Khac Hieu"
            android:textColor="@color/color_wellcome_step1"
            android:textSize="@dimen/sp16"
            app:layout_constraintLeft_toRightOf="@+id/imgAvatarSetting"
            app:layout_constraintTop_toTopOf="@+id/imgAvatarSetting" />

        <TextView
            android:id="@+id/tvSyncTimeSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen12"
            android:layout_marginTop="@dimen/dimen3"
            android:drawablePadding="@dimen/dimen10"
            android:fontFamily="@font/roboto_light"
            android:gravity="start"
            android:text="Last synchronization: 12:33 PM"
            android:textColor="@color/color_wellcome_step1"
            android:textSize="@dimen/sp13"
            app:layout_constraintLeft_toRightOf="@+id/imgAvatarSetting"
            app:layout_constraintTop_toBottomOf="@+id/tvNameSetting" />

        <ImageView
            android:id="@+id/btnSyncSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen12"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_marginEnd="@dimen/dimen18"
            android:src="@drawable/ic_setting2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvNameSetting" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@color/color_bg_app"
        android:visibility="gone">


        <TextView
            android:id="@+id/tvLabelRemoveAds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen18"
            android:layout_marginTop="@dimen/dimen10"
            android:drawablePadding="@dimen/dimen10"
            android:fontFamily="@font/roboto_regular"
