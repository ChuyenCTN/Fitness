<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgItemRoutine1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen150"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/rounded_corner_item_1" />

    <TextView
        android:id="@+id/tvTitleItemRoutine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen8"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="1"
        android:text="@string/dummy_button"
        android:textColor="@color/color_wellcome_step1"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tvTimeItemRoutine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen3"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_light"
        android:maxLines="1"
        android:text="Day 1"
        android:textColor="@color/color_text_content_1"
        android:textSize="@dimen/sp12" />

</LinearLayout>