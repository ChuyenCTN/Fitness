<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_app"
    tools:context=".feature.CompleteActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dimen40">

        <RelativeLayout
            android:id="@+id/layoutContentImageComplete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen550"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgContentExercise4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_content_complete" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/over_view_complete" />

            <ImageView
                android:id="@+id/imgCupComplete"
                android:layout_width="@dimen/dimen120"
                android:layout_height="@dimen/dimen120"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen90"
                android:src="@drawable/ic_cup_congratulation" />

            <TextView
                android:id="@+id/tvCongratulation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgCupComplete"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen10"
                android:drawableRight="@drawable/ic_face_complete"
                android:drawablePadding="@dimen/dimen10"
                android:fontFamily="@font/roboto_black"
                android:text="@string/txt_congratulation"
                android:textAllCaps="true"
                android:textColor="@color/color_congratulation_text"
                android:textSize="@dimen/sp20" />

            <TextView
                android:id="@+id/tvTimeComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCongratulation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen16"
                android:drawablePadding="@dimen/dimen10"
                android:fontFamily="@font/roboto_black"
                android:text="day 2"
                android:textAllCaps="true"
                android:textColor="@color/color_congratulation_text"
                android:textSize="@dimen/sp30" />

            <TextView
                android:id="@+id/tvComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTimeComplete"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_black"
                android:letterSpacing="0.1"
                android:text="@string/txt_completed"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20" />

            <LinearLayout
                android:id="@+id/layoutInfoComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvComplete"
                android:layout_marginTop="@dimen/dimen20"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCountExerciseComplete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="6"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp32" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/txt_exercise"
                        android:textColor="@color/color_text_complete"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvKCalComplete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="8"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp32" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/txt_kcal"
                        android:textColor="@color/color_text_complete"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTime1Complete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="00:17"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp32" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/txt_exercise"
                        android:textColor="@color/color_text_complete"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutInfoComplete"
                android:layout_marginTop="@dimen/dimen40"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnReportComplete"
                    android:layout_width="@dimen/dimen150"
                    android:layout_height="@dimen/dimen48"
                    android:layout_marginRight="@dimen/dimen20"
                    android:background="@drawable/bg_btn_report"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/menu_report"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:id="@+id/btnHomeComplete"
                    android:layout_width="@dimen/dimen150"
                    android:layout_height="@dimen/dimen48"
                    android:background="@drawable/bg_button_home"
                    android:drawableLeft="@drawable/ic_back_to_home"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/dimen14"
                    android:text="@string/txt_home"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen16"
            android:layout_marginTop="@dimen/dimen26"
            android:background="@drawable/bg_card_step_2"
            app:layout_constraintTop_toBottomOf="@+id/layoutContentImageComplete">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen14"
                android:layout_marginRight="@dimen/dimen14"
                android:layout_marginBottom="@dimen/dimen20"
                android:paddingTop="@dimen/dimen14">

                <TextView
                    android:id="@+id/tvUnitBmiComplete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/txt_bmi"
                    android:textColor="@color/color_wellcome_step1"
                    android:textSize="@dimen/sp16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvEdit1Complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_edit"
                    android:drawablePadding="@dimen/dimen4"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/txt_edit"
                    android:textColor="@color/color_wellcome_step1"
                    android:textSize="@dimen/sp13"
                    app:layout_constraintBottom_toBottomOf="@+id/tvUnitBmiComplete"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvComplete1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen60"
                    android:layout_marginBottom="@dimen/dimen6"
                    android:background="@drawable/ic_group_80"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_horizontal"
                    android:text="19.1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14"
                    app:layout_constraintBottom_toTopOf="@+id/layoutColorComplete"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <LinearLayout
                    android:id="@+id/layoutColorComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen43"
                    android:orientation="horizontal"
                    android:weightSum="6.75"
                    app:layout_constraintTop_toBottomOf="@+id/tvUnitBmiComplete">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen56"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_bmi_1" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen56"
                        android:layout_weight="0.1"
                        android:background="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen56"
                        android:layout_weight="0.75"
                        android:background="@drawable/bg_bmi_2" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen56"
                        android:layout_weight="0.1"
                        android:background="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen56"
                        android:layout_weight="2"
                        android:background="@drawable/bg_bmi_3" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen56"
                        android:layout_weight="0.1"
                        android:background="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen56"
                        android:layout_weight="1"
                        android:background="@drawable/bg_bmi_4" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen56"
                        android:layout_weight="0.1"
                        android:background="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen56"
                        android:layout_weight="1"
                        android:background="@drawable/bg_bmi_5" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen56"
                        android:layout_weight="0.1"
                        android:background="@android:color/transparent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen56"
                        android:layout_weight="1"
                        android:background="@drawable/bg_bmi_6" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutNumberColorComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10"
                    android:orientation="horizontal"
                    android:weightSum="40"
                    app:layout_constraintTop_toBottomOf="@+id/layoutColorComplete">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/roboto_regular"
                        android:text="15"
                        android:textColor="@color/color_content_step1"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/roboto_regular"
                        android:text="16"
                        android:textColor="@color/color_content_step1"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:fontFamily="@font/roboto_regular"
                        android:text="18.5"
                        android:textColor="@color/color_content_step1"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6.5"
                        android:fontFamily="@font/roboto_regular"
                        android:text="25"
                        android:textColor="@color/color_content_step1"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6.5"
                        android:fontFamily="@font/roboto_regular"
                        android:text="30"
                        android:textColor="@color/color_content_step1"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/roboto_regular"
                        android:text="30"
                        android:textColor="@color/color_content_step1"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="right"
                        android:text="30"
                        android:textColor="@color/color_content_step1"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <View
                    android:id="@+id/viewHealthyComplete"
                    android:layout_width="@dimen/dimen14"
                    android:layout_height="@dimen/dimen14"
                    android:layout_marginTop="@dimen/dimen20"
                    android:background="@drawable/bg_bmi_3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutNumberColorComplete" />

                <TextView
                    android:id="@+id/tvHealthyComplete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen8"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/txt_label_healthy"
                    android:textColor="@color/color_wellcome_step1"
                    android:textSize="@dimen/sp14"
                    app:layout_constraintBottom_toBottomOf="@+id/viewHealthyComplete"
                    app:layout_constraintLeft_toRightOf="@+id/viewHealthyComplete" />

                <View
                    android:id="@+id/lineComplete"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/dimen16"
                    android:layout_marginTop="@dimen/dimen16"
                    android:background="#F4F4F4"
                    app:layout_constraintTop_toBottomOf="@+id/tvHealthyComplete" />

                <TextView
                    android:id="@+id/tvLabel1Complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen16"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/txt_height"
                    android:textColor="@color/color_wellcome_step1"
                    android:textSize="@dimen/sp14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lineComplete" />

                <TextView
                    android:id="@+id/tvLabel2Complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/txt_current"
                    android:textColor="@color/color_content_step1"
                    android:textSize="@dimen/sp14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLabel1Complete" />

                <TextView
                    android:id="@+id/tvEdit2Complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_edit"
                    android:drawablePadding="@dimen/dimen4"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/txt_edit"
                    android:textColor="@color/color_wellcome_step1"
                    android:textSize="@dimen/sp13"
                    app:layout_constraintBottom_toBottomOf="@+id/tvLabel1Complete"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/tvValueCurrentcomplete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen4"
                    android:fontFamily="@font/roboto_regular"
                    android:text="170.0 cm"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text_step"
                    android:textSize="@dimen/sp16"
                    app:layout_constraintBottom_toBottomOf="@+id/tvLabel2Complete"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>