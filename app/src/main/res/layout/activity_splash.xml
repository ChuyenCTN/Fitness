<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_splash"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".feature.SplashActivity">

    <ImageView
        android:id="@+id/imgSplash"
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/dimen10"
        android:scaleType="centerCrop"
        android:scrollX="-100dp"
        android:src="@drawable/img_splash" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen30"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/txt_label1_splash"
        android:textColor="@color/white"
        android:textSize="@dimen/sp40" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen60"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/txt_label2_splash"
        android:textColor="@color/white"
        android:textSize="@dimen/sp24" />

</LinearLayout>